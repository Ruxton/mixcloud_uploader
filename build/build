#! /bin/bash
pushd `dirname $0` > /dev/null
SCRIPTPATH=`pwd -P`
popd > /dev/null

if [[ ! -f $SCRIPTPATH/oauth_client.env ]]; then
  echo "Please make an oauth_client.env from the sample file"
  echo .
  exit 1
fi

source $SCRIPTPATH/oauth_client.env

NAME=mixcloud
VERSION=0.6
MINVERSION=`date -u +%Y%m%d%.H%M%S`
LDFLAGS="-s -w -X github.com/ruxton/mixcloud/versions.MINVERSION=${MINVERSION} -X github.com/ruxton/mixcloud/versions.VERSION=${VERSION} -X github.com/ruxton/mixcloud/mixcloud.OAUTH_CLIENT_ID=${OAUTH_CLIENT_ID} -X github.com/ruxton/mixcloud/mixcloud.OAUTH_CLIENT_SECRET=${OAUTH_CLIENT_SECRET}"
OUTFILE=pkg/${VERSION}/${NAME}

# GOOS=windows GOARCH=386 go build -ldflags "${LDFLAGS}" -o ${OUTFILE}.exe ${NAME}.go
GOOS=linux GOARCH=386 go build -v -ldflags "${LDFLAGS}" -o ${OUTFILE}.linux ${NAME}.go
# CGO_ENABLED=1 GOOS=linux GOARCH=amd64 go build -ldflags "${LDFLAGS}" -o ${OUTFILE}.linux64 ${NAME}.go
GOOS=darwin GOARCH=amd64 go build -ldflags "${LDFLAGS}" -o ${OUTFILE}.osx ${NAME}.go
